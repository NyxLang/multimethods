{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "removeComments": false,
        "sourceMap": true,
        "outDir": "../dist/extras",
        "rootDir": ".",

        // Static checks
        "strictNullChecks": false, // TODO: set true...
        "noUnusedLocals": false,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": false
    }
}
